@model IEnumerable<SelfDevelopmentApp.Models.Habit>

@{
    ViewData["Title"] = "Index";
}
<section id="TrackerTitle">
    <div class="container">
        <div class="section-title">
            <h1>Habit Tracker</h1>
        </div>
    </div>
</section>
<div class="text-center">
    <p>
        <a href="#myModal"
           class="trigger-btn" data-toggle="modal">
            <i class="fas fa-plus-square"></i> Add Habit
        </a>
    </p>
</div>

<!-- Modal HTML -->
<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-login">
        <div class="modal-content">
            <form asp-action="Insert" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">New Habit.. New Challenge</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input name="Description" type="text" class="form-control" required="required">
                    </div>
                    <div class="form-group colorInput">
                        <label>Color</label><br />
                        <input name="Color" type="color" value="#D18585" required="required">
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary pull-right" value="Add Habit">
                </div>
            </form>
        </div>
    </div>
</div>


<table class="table" id="habitsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StartingDate)
                </td>

                <td style="text-align: center;">
                    <a style="color:forestgreen;" asp-action="ShowTracker" asp-route-id="@item.ID">
                        <i class="fas fa-calendar-alt"></i> Show
                    </a> |
                    <a style="color:dodgerblue;" asp-action="Edit" asp-route-id="@item.ID">
                        <i class="fas fa-edit"></i> Edit
                    </a> |
                    <a style="color:red;" asp-action="Delete" asp-route-id="@item.ID">
                        <span class="glyphicon glyphicon-trash"></span> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p id="deletedID" style="display:none;">@TempData["deletedID"]</p>

                    <div class="todo-list">

                        @foreach (var item in Model)
                        {
                            <div class="todo-item">
                                @{ if (item.Done == true)
                                    {
                                        <div class="checker"><span class=""><input type="checkbox" checked="checked" onclick="myFun(this, @item.ID)" class="done"></span></div>
                                    }
                                    else
                                    {
                                        <div class="checker"><span class=""><input type="checkbox" onclick="myFun(this, @item.ID)" /></span></div>
                                    }
                                }
                                <span>@Html.DisplayFor(modelItem => item.Description)</span>
                                <div style="display:inline-block; float:right">
                                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model SelfDevelopmentApp.ViewModel.EditProfileViewModel

@{ ViewData["Title"] = "Edit"; }


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<div class="panel panel-default">
    <div class="form">

        <div id="editrrof">
            <h1 style="color: rgb(12,64,100)">Update Profile!</h1>

            <form enctype="multipart/form-data" asp-action="Edit"  id="login_form">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @*<input type="hidden" asp-for="Id" />*@
                <div class="form-group">
                    @*<label asp-for="Fname" class="control-label"></label>*@
                    <div>First Name</div>
                    <input asp-for="Fname" class="form-control" />
                    <span asp-validation-for="Fname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>Last Name</div>
                    @*<label asp-for="Lname" class="control-label"></label>*@
                    <input asp-for="Lname" class="form-control" />
                    <span asp-validation-for="Lname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div>Phone Number</div>
                    <input asp-for="PhoneNumber" class="form-control"></input>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>Wight</div>
                    <input asp-for="Weight" class="form-control"></input>
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>Height</div>
                    <input asp-for="Height" class="form-control"></input>
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <div>Data Of Birth</div>
                    <input asp-for="DOB" class="form-control"></input>
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <div class="custom-file-label">Upload profile image...</div>
                                <input asp-for="PPImageData" class="form-control custom-file-input" style="width:350px">

                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group" style="text-align:center;">
                    <input type="submit" style="background-color: rgb(12,64,100)" value="Save" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>

    <div>
        <a asp-action="Details">Back to profile</a>
    </div>
</div>


<link href="~/assets/css/loginRegister.css" rel="stylesheet" />
